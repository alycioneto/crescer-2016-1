@model LojaNinja.MVC.Models.PedidoModel
@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-pedido">
    <h4> <strong>ID: </strong>@Model.Id</h4> 
    <h4><strong>Cliente: </strong>@Model.NomeCliente </h4> 
    <h4><strong>Produto: </strong>@Model.NomeProduto</h4> 
        @{
            String valorVenda;
            if (Model.ValorVenda.ToString().Contains(","))
            {
                valorVenda =  @Model.ValorVenda.ToString();
            }
            else
            {
                valorVenda = Model.ValorVenda.ToString() + ",00";
            }
        }
    <h4><strong>Valor: R$</strong>@valorVenda</h4>
    <h4><strong>Modo de Pagamento: </strong>@Model.TipoPagamento</h4> 
    <h4><strong>Data de Entrega: </strong>@Model.DataEntrega.ToString().Substring(0, 10)</h4> 
    <h4><strong>Data do Pedido: </strong>@Model.DataPedido.ToString().Substring(0, 10)</h4> 
    <h4><strong>Cidade: </strong> @Model.Cidade - @Model.Estado</h4> 
    @{
        if (Model.Urgente) {
            <h4><strong>Pedido Urgente</strong> <span class="glyphicon glyphicon-exclamation-sign"></span></h4>
            }
    }
    @Html.ActionLink("Voltar para Página Inicial", "Index", new { controller = "Main" }, new { type = "submit", @class = "btn btn-default" })
</div>
