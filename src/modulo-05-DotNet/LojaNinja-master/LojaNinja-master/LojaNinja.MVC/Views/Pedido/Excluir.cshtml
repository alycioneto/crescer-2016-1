@model LojaNinja.Dominio.Pedido
@{
    ViewBag.Title = "Excluir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-pedido">
    <h3> <strong>Pedido </strong>@Model.Id - @Model.NomeProduto </h3>
    <h4><strong>Cliente: </strong>@Model.NomeCliente </h4>
    @{
        String valorVenda;
        if (Model.Valor.ToString().Contains(","))
        {
            valorVenda = @Model.Valor.ToString();
        }
        else
        {
            valorVenda = Model.Valor.ToString() + ",00";
        }
    }
    <h4><strong>Valor: R$</strong>@valorVenda</h4>
    <h4><strong>Modo de Pagamento: </strong>@Model.TipoPagamento</h4>
    <h4><strong>Data de Entrega: </strong>@Model.DataEntregaDesejada.ToString().Substring(0, 10)</h4>
    <h4><strong>Data do Pedido: </strong>@Model.DataPedido.ToString().Substring(0, 10)</h4>
    <h4><strong>Cidade: </strong> @Model.Cidade - @Model.Estado</h4>
    @Html.ActionLink("Registrar Novo Pedido", "Registro", "Pedido", new { type = "submit", @class = "btn btn-success" })
    @Html.ActionLink("Voltar para Página Inicial", "Index", new { controller = "Main" }, new { type = "submit", @class = "btn btn-default" })
   </div>
